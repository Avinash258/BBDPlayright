{
  "name": "demowebshop-playwright-cucumber",
  "version": "1.0.0",
  "description": "Playwright Cucumber framework for DemoWebshop testing",
  "main": "index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "test": "cucumber-js",
    "test:headed": "cross-env HEADLESS=false cucumber-js",
    "test:debug": "cross-env HEADLESS=false SLOW_MO=1000 cucumber-js",
    "test:ui": "cucumber-js --format @cucumber/pretty-formatter",
    "test:report": "cucumber-js ; node scripts/generate-report.js",
    "test:allure": "cucumber-js ; npm run allure:generate",
    "allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "allure:serve": "allure serve reports/allure-results",
    "test:smoke": "cucumber-js --name 'Homepage loads successfully' --name 'Newsletter subscription' --name 'Search functionality'",
    "test:regression": "cucumber-js --tags '@regression'",
    "test:performance": "cucumber-js --name 'Page load performance' --name 'Homepage loads successfully'",
    "test:ci": "npm run test:pure",
    "test:ci:headed": "npm run test:pure:headed",
    "test:chrome": "cross-env BROWSER=chromium cucumber-js --config cucumber-chrome.json",
    "test:chrome:headed": "cross-env BROWSER=chromium HEADLESS=false cucumber-js --config cucumber-chrome.json",
    "test:chrome:debug": "cross-env BROWSER=chromium HEADLESS=false SLOW_MO=1000 cucumber-js --config cucumber-chrome.json",
    "test:js": "cucumber-js --config cucumber-js.json",
    "test:js:headed": "cross-env HEADLESS=false cucumber-js --config cucumber-js.json",
    "test:js:debug": "cross-env HEADLESS=false SLOW_MO=1000 cucumber-js --config cucumber-js.json",
    "test:pure": "cucumber-js --config cucumber-js.json",
    "test:pure:headed": "cross-env HEADLESS=false cucumber-js --config cucumber-js.json",
    "test:pure:debug": "cross-env HEADLESS=false SLOW_MO=1000 cucumber-js --config cucumber-js.json",
    "playwright:install": "playwright install",
    "playwright:install:ci": "playwright install --with-deps",
    "playwright:codegen": "playwright codegen demowebshop.tricentis.com",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:ci": "eslint . --ext .ts,.js --max-warnings 0",
    "build:ci": "npm run lint:ci",
    "clean": "rimraf reports",
    "ci:setup": "npm ci ; npm run playwright:install:ci",
    "ci:test": "npm run test:pure",
    "ci:test:headed": "npm run test:pure:headed"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "javascript",
    "testing",
    "demowebshop",
    "bdd"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^2.15.1",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^7.2.0",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "demowebshop-playwright-cucumber": "file:",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6"
  }
}
