# DemoWebshop Test Configuration

# Environment
NODE_ENV=development

# Browser Configuration
HEADLESS=false
SLOW_MO=1000

# Test Configuration
BASE_URL=https://demowebshop.tricentis.com
TIMEOUT=30000
RETRIES=2

# Viewport Configuration
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Test Data
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123
TEST_USER_FIRST_NAME=John
TEST_USER_LAST_NAME=Doe

# Reporting
GENERATE_REPORTS=true
REPORT_FORMAT=html
REPORT_PATH=reports

# Screenshots
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_PATH=reports/screenshots

# Video Recording
VIDEO_ON_FAILURE=true
VIDEO_PATH=reports/videos

# Trace
TRACE_ON_FAILURE=true
TRACE_PATH=reports/traces

# Parallel Execution
WORKERS=1
FULLY_PARALLEL=true

# CI Configuration
CI=false
FORBID_ONLY=false
